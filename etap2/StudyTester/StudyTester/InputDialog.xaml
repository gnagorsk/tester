<Window x:Class="StudyTester.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please provide the data:" WindowStartupLocation="CenterScreen" Style="{DynamicResource MainWindowStyle}" Height="200" Width="350" >
    <Grid FocusManager.FocusedElement="{Binding ElementName=Input}">
        <Button IsDefault="True" Content="OK" HorizontalAlignment="Left" Margin="179,128,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource OurButton}" Click="Button_Click_1" />
        <Button IsCancel="True" Content="Cancel" HorizontalAlignment="Left" Margin="74,128,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource OurButton}" Click="Button_Click_2"/>
        <TextBox  Name="Input" HorizontalAlignment="Left" Height="38" Margin="52,49,0,0" TextWrapping="Wrap" Text="Your variable." VerticalAlignment="Top" Width="240" GotFocus="Input_GotFocus_1"/>
        <Label Name="MainLabel" Content="Desired variable:" HorizontalAlignment="Left" Margin="52,24,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
